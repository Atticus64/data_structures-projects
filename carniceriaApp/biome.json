{
  "$schema": "https://biomejs.dev/schemas/1.9.2/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false,
    "ignore": []
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "tab"
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "suspicious": {
        "noDebugger": "off",
        "noConsoleLog": "info"
      },
      "correctness": {
        "noConstAssign": "error"
      },
      "style": {
        "useImportType": "off",
        "recommended": true
      },
      "recommended": true
    }
  },
  "javascript": {
    "formatter": {
      "attributePosition": "auto",
      "quoteStyle": "single",
      "semicolons": "always"
    }
  }
}